<h1 class="main_heading">Title: <%= @job.title %></h1>
<h4 class="main_heading">Company: <%= link_to @job.company.name, company_path(@job.company) %></h4>

<section class='borders_no_border'>
  <p><strong>Description:</strong> <%= @job.description %></p>
  <p><strong>Level of Interest: </strong><%= @job.level_of_interest %></p>
  <p><strong>City: </strong><%= @job.city %></p>
  <button class="delete"><%= link_to "Delete Job", company_job_path(@company, @job), method: :delete %></button>
  <button><%= link_to "Edit Job", edit_company_job_path(@company, @job) %></p>
</section>

<section class='borders'>
  <h3>Comments: </h3>
  <% @job.comments.reverse.each do |comment| %>
    <p><%= comment.content %></p>
  <% end %>
  <button class="comment"><%= link_to "New Comment", new_job_comment_path(@job) %></button>
</section>
